<% if logged_in? -%>
  <div id="user-bar-greeting">Zalogowany jako: <%= link_to_current_user :content_method => :login %></div>
  <div id="user-bar-action"  >(<%= link_to "Wyloguj", logout_path, { :title => "Wyloguj" }    %>)</div>
<% else -%>
  <div id="user-bar-greeting"><%= link_to_login_with_IP 'Jesteś nie zalogowany', :style => 'border: none;' %></div>
  <div id="user-bar-action"  ><%= link_to "Login",  login_path,  { :title => "Login" } %> /
                               <%= link_to "Rejestracja", signup_path, { :title => "zarejestruj się" } %></div>
<% end -%>