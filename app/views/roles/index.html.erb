<h1>Lista uprawnień</h1>

<table>
  <tr>
    <th>Nazwa</th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%=h role.name %></td>
    <td><%= link_to 'Pokaż', role %></td>
    <td><%= link_to 'Edytuj', edit_role_path(role) %></td>
    <td><%= link_to 'Usuń', role, :confirm => 'Czy napewno chcesz usunąć tę rolę?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Dodaj nową rolę', new_role_path %>