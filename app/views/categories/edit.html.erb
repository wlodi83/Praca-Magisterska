<h1>Edytuj kategorię</h1>

<% semantic_form_for @category do |form| %>

<% form.inputs do %>
  <%= form.input :name, :label => "Nazwa" %>
  <%= form.input :description, :label => "Opis kategorii" %>
  <%= form.input :hidden, :label => "Ukryta?", :as => :radio %>
  <%= form.input :parent_id, :label => "Rodzic", :as => :select, :collection => nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" }, :include_blank => "Wybierz rodzica dla kategorii", :hint => "Przykład: myszków => sport => piłka nożna" %>
<% end %>

<% form.buttons do %>
  <%= form.commit_button :label => "Zapisz" %>
<% end %>

<% end %>

<%= link_to 'Pokaż', @category %> |
<%= link_to 'Powrót', categories_path %>