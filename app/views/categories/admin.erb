<h1>Lista Kategorii</h1>

<table>
  <tr>
    <th>Nazwa</th>
    <th>Opis</th>
    <th>Ukryta?</th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.description %></td>
    <td><%= category.hidden %></td>
    <td><%= link_to 'Pokaż', category %></td>
    <td><%= link_to 'Edytuj', edit_category_path(category) %></td>
    <td><%= link_to 'Usuń', category, :confirm => 'Czy chcesz usuną tę kategorię?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'Dodaj nową kategorię', new_category_path %>